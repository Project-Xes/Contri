# ============================================
# ContriBlock Frontend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL
VITE_API_URL=http://localhost:5000

# ============================================
# EMAILJS CONFIGURATION
# ============================================
# Get these from https://www.emailjs.com/
# 1. Sign up at EmailJS
# 2. Add Email Service (Gmail, Outlook, etc.)
# 3. Create Email Template for OTP
# 4. Get your credentials from dashboard

# EmailJS Service ID (from Email Services page)
VITE_EMAILJS_SERVICE_ID=your_service_id

# EmailJS Template ID (from Email Templates page)
VITE_EMAILJS_TEMPLATE_ID=your_template_id

# EmailJS Public Key (from Account page)
VITE_EMAILJS_PUBLIC_KEY=your_public_key

# ============================================
# BLOCKCHAIN CONFIGURATION (Optional)
# ============================================
# These are usually handled by backend, but can be used for direct frontend interaction

# Ganache/Ethereum RPC URL
# VITE_BLOCKCHAIN_RPC_URL=http://127.0.0.1:7545

# Smart Contract Address
# VITE_CONTRACT_ADDRESS=0xYOUR_CONTRACT_ADDRESS

# ============================================
# FIREBASE CONFIGURATION (Optional)
# ============================================
# If you're using Firebase for additional features

# VITE_FIREBASE_API_KEY=your-firebase-api-key
# VITE_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
# VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# ============================================
# ANALYTICS (Optional)
# ============================================
# Google Analytics
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# VITE_ENABLE_MARKETPLACE=true
# VITE_ENABLE_KYC=true
# VITE_ENABLE_NOTIFICATIONS=true

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Uncomment and configure for production deployment

# VITE_API_URL=https://api.yourdomain.com
# VITE_ENABLE_ANALYTICS=true

