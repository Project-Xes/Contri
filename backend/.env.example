# ============================================
# ContriBlock Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# ============================================
# DATABASE
# ============================================
# SQLite (Development)
DATABASE_URL=sqlite:///dev.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/contriblock

# MySQL (Alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/contriblock

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
# Ganache local blockchain URL
GANACHE_URL=http://127.0.0.1:7545

# Private key from Ganache account (for deploying contracts)
# Get this from Ganache UI - click on key icon next to any account
DEPLOYER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_FROM_GANACHE

# Deployed smart contract address
# Run deploy_contract.py to get this address
CONTRACT_ADDRESS=0xYOUR_DEPLOYED_CONTRACT_ADDRESS

# Path to contract ABI (usually don't need to change)
CONTRACT_ABI_PATH=contracts/build/contract.json

# ============================================
# IPFS / PINATA CONFIGURATION
# ============================================
# Get these from https://pinata.cloud/
# Sign up -> API Keys -> New Key
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-api-key

# ============================================
# CORS & FRONTEND
# ============================================
# Frontend URL for CORS
FRONTEND_ORIGIN=http://localhost:5173

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Upload folder path (relative to backend directory)
UPLOAD_FOLDER=uploads

# Maximum file size in bytes (20MB default)
MAX_CONTENT_LENGTH=20971520

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# Note: EmailJS is used on frontend for OTP emails
# These are only needed if you implement server-side email

# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=True

# ============================================
# LOGGING (Optional)
# ============================================
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log

# ============================================
# REDIS (Optional - for caching/sessions)
# ============================================
# REDIS_URL=redis://localhost:6379/0

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Uncomment and configure for production deployment

# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://user:pass@prod-db:5432/contriblock
# GANACHE_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
# FRONTEND_ORIGIN=https://yourdomain.com

